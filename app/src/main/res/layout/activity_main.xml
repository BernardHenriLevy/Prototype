<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2=""
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="156dp"
        app:srcCompat="@drawable/Logo"
        android:id="@+id/imageView"
        android:contentDescription="LogoIzyPark" />

    <Button
        android:id="@+id/connec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commencer la recherche"
        android:fontFamily="sans-serif-medium"
        android:elevation="@dimen/cast_intro_overlay_button_margin_bottom"
        android:textAllCaps="false"
        android:backgroundTint="@color/cast_intro_overlay_button_background_color" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/iutBayonne"
        android:id="@+id/imageView2"
        android:layout_height="66dp"
        android:contentDescription="logoIutBayonne"
        android:adjustViewBounds="false"
        android:cropToPadding="true" />

</LinearLayout>
